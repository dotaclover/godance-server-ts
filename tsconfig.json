{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
    "typeRoots": ["types", "node_modules/@types"],
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
